pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
    cls()
    pos = 0
    dir = 1
    step = 3
    print( "start" )
    charw = 5
    charh = 7
    midx = 64
    midy = 64
    white = 7
    black = 0
    menu = {"Fan","Flags"}
    selected = 1
end
-->8
function _update() 
    color = 1+flr(rnd(15))
    rectfill(0,123,127,127,0)
    print( pos, pos, 123, color )
    
    line(64,0,pos,120,color)
    pos = pos + step
    if pos > 127 or pos < 0 then
        dir = -dir
        step = dir * ( 2 + flr(rnd(10)) )
        pos = max( 0, pos )
        pos = min( 127, pos )
    end
    drawmenu()
end
-->8
function drawmenu()
    w = 10 * charw + 1
    h = 5 * charh + 1
    x = midx - w/2
    y = midy - h/2
    rectfill(x,y,x+w,y+h,black)
    rect(x,y,x+w,y+h,white)
    for i = 1, max(5,#menu) do
        print(i,x+2,y+((i-1)*charh)+2,white)
    end
end
